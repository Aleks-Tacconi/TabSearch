{
    "manifest_version": 3,
    "name": "Tab Search",
    "version": "1.0",
    "description": "Improve productivity and reduce search fatigue with a simple fuzzy finder for your tabs.",
    "action": {
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "background.js"
    },

    "permissions": ["scripting", "activeTab", "tabs", "storage"],
    "host_permissions": ["<all_urls>"],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["search.png"],
            "matches": ["<all_urls>"]
        },
        {
            "resources": ["html2canvas.min.js"],
            "matches": ["<all_urls>"]
        }
    ],
    "commands": {
        "show_popup": {
            "suggested_key": { "default": "Ctrl+Shift+Y" },
            "description": "Show popup on page"
        }
    }
}
